<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qinyn.android.template"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="qinyn.android.init.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:sharedUserId="android.uid.system"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="qinyn.android.template.ui.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="qinyn.android.template.ui.activity.ViewpagerActivity" />
        <activity android:name="qinyn.android.template.ui.activity.SlideMenuActivity" />
        <activity android:name="qinyn.android.template.ui.activity.PullToRefreshActivity" />
        <activity android:name="qinyn.android.template.ui.activity.JsonActivity" />
        <activity android:name="qinyn.android.template.ui.activity.WifiConnectActivity" />
        <activity android:name="qinyn.android.template.ui.activity.SSLActivity" />
        <activity android:name="qinyn.android.template.ui.activity.GLActivity" />
        <activity android:name="qinyn.android.template.ui.activity.ZXingActivity" />
    </application>

</manifest>